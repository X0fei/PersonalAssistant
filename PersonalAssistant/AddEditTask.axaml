<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="PersonalAssistant.AddEditTask"
        Title="Добавить задачу" Width="400" Height="450" WindowStartupLocation="CenterOwner">
	<DockPanel Margin="10">

		<!-- Кнопка Назад -->
		<Button Name="BackButton"
                Content="← Назад"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                DockPanel.Dock="Top"
                Margin="0,0,0,10"/>

		<!-- Основной контент -->
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<StackPanel Margin="10" Spacing="10">

				<TextBlock Text="Имя задачи"/>
				<TextBox Name="NameBox"/>

				<TextBlock Text="Описание"/>
				<TextBox Name="DescriptionBox" AcceptsReturn="True" Height="80"/>

				<TextBlock Text="Приоритет"/>
				<ComboBox Name="PriorityBox">
					<ComboBoxItem Content="Без приоритета"/>
					<ComboBoxItem Content="Низкий"/>
					<ComboBoxItem Content="Средний"/>
					<ComboBoxItem Content="Высокий"/>
				</ComboBox>

				<TextBlock Text="Статус"/>
				<ComboBox Name="StatusBox">
					<ComboBoxItem Content="Не начато"/>
					<ComboBoxItem Content="В процессе"/>
					<ComboBoxItem Content="Выполнено"/>
					<ComboBoxItem Content="Не выполнено"/>
				</ComboBox>

				<Button Name="SaveButton" Content="Сохранить" HorizontalAlignment="Right" Margin="0,10,0,0" Click="SaveButton_Click"/>

			</StackPanel>
		</ScrollViewer>
	</DockPanel>
	
</Window>
