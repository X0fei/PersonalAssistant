<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
        x:Class="PersonalAssistant.ProfileWindow"
        Title="Профиль" Width="400" Height="600"
        WindowStartupLocation="CenterScreen">
	<StackPanel Margin="20" Spacing="10">
		<Button Content="Назад" Click="BackButton_Click" HorizontalAlignment="Left"/>

		<Image Name="ProfileImage" Width="100" Height="100"/>
		<Button Content="Добавить фотографию" Click="AddPhotoButton_Click"/>

		<TextBox Name="NameBox" Watermark="Имя"/>
		<TextBox Name="BioBox" Watermark="Описание"/>
		<TextBox Name="LoginBox" Watermark="Логин"/>
		<TextBox Name="PasswordBox" Watermark="Пароль"/>
		<TextBox Name="ConfirmBox" Watermark="Подтверждение пароля"/>

		<Button Content="Сохранить" Click="SaveButton_Click"/>
		<TextBlock Name="ErrorText" Foreground="Red"/>
	</StackPanel>
</Window>
