<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="460" d:DesignHeight="500"
        x:Class="PersonalAssistant.TasksWindow"
		x:CompileBindings="False"
        Title="Задачи" 
		Width="460" Height="500"
		WindowStartupLocation="CenterScreen">
	
	<DockPanel
		Margin="10">

		<StackPanel
			Orientation="Horizontal"
			DockPanel.Dock="Top"
			Spacing="10"
			HorizontalAlignment="Right"
			Margin="0,0,0,10">
			
			<Button
				Name="GoBackButton"
				Content="Выйти"
				Click="GoBackButton_Click"/>
			<Button
				Name="AddListOfTasksButton"
				Content="Добавить категорию"
				Click="AddListOfTasksButton_Click"/>
			<Button
				Name="AddTaskButton"
				Content="Добавить задачу"
				Click="AddTaskButton_Click"/>
			<Button
				Name="ProfileButton"
				Content="Имя"
				Click="ProfileButton_Click"/>
			
		</StackPanel>

		<!-- Панель с фильтром -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
			<TextBlock Text="Фильтр:" VerticalAlignment="Center" Margin="0,0,5,0"/>
			<ComboBox
				Name="FilterComboBox"
				SelectionChanged="FilterComboBox_SelectionChanged"
				Width="150"/>
			<Button
				Name="MatrixButton"
				Content="Матрица Эйзенхауэра"
				Click="MatrixButton_Click"
				Margin="10 0 0 0"/>
			<Button
				Name="MoodButton"
				Content="Настроение"
				Click="MoodButton_Click"
				Margin="10 0 0 0"/>
		</StackPanel>

		<ListBox
			Name="ListsOfTasks"
			SelectionChanged="ListsOfTasks_SelectionChanged"
			DoubleTapped="ListsOfTasks_ItemDoubleTapped"
			SelectionMode="Single">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock
							Text="{Binding Name}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<ListBox
			Name="AllTasksList"
			DoubleTapped="Item_DoubleTapped">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border
						Tag="{Binding Id}"
						Background="">
						<StackPanel>
							<TextBlock
								Text="{Binding Name}"/>
							<TextBlock
								Text="{Binding Description}"/>
							<TextBlock >
								<Run  Text="Приоритет:"/>
								<Run Text="{Binding PriorityNavigation.Name}"/>
							</TextBlock>
							<TextBlock
								Text="{Binding StatusNavigation.Name}"/>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

	</DockPanel>
</Window>
