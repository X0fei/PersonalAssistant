<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1266" d:DesignHeight="768"
        x:Class="PersonalAssistant.EisenhowerMatrixWindow"
		x:CompileBindings="False"
		Width="1266" Height="768"
		WindowStartupLocation="CenterOwner"
        Title="Матрица Эйзенхауэра">
	<DockPanel
		Margin="25">

		<!-- Меню (слева) -->
		<Border
			DockPanel.Dock="Left">

			<DockPanel>

				<TextBlock
					DockPanel.Dock="Top"
					Text="LifePlan"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Foreground="#497248"
					FontSize="48"/>

				<!-- Кнопка «На главную» -->
				<Button
					DockPanel.Dock="Bottom"
					Width="175"
					Height="80"
					Background="#F9F0EB"
					CornerRadius="24"
					Click="GoBackButton_Click">
					<TextBlock
						Text="На главную"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontSize="20"
						Foreground="#E0AF49"
						TextWrapping="Wrap"/>
				</Button>

				<!-- Вкладки -->
				<StackPanel
					Spacing="46"
					Margin="0 60">

					<Button
						Content="Статистика"
						Foreground="#183F28"
						Background="Transparent"
						FontSize="15"/>
					<Button
						Click="MoodButton_Click"
						Content="Настроение"
						Foreground="#183F28"
						Background="Transparent"
						FontSize="15"/>
					<Button
						Click="AddTaskButton_Click"
						Content="Добавить задачу"
						Foreground="#183F28"
						Background="Transparent"
						FontSize="15"/>
					<Button
						Content="Матрица Эйзенхауэра"
						Foreground="#183F28"
						Background="Transparent"
						FontSize="15"
						IsEnabled="False"/>

				</StackPanel>

			</DockPanel>

		</Border>

		<!-- Основная часть окна -->
		<Border
			CornerRadius="25"
			Background="#F3E6DE"
			Margin="35 0 0 0">
			<DockPanel>

				<Border
					DockPanel.Dock="Right"
					Padding="15">
					<DockPanel>

						<DockPanel
							DockPanel.Dock="Top">
							<Calendar
								Name="CalendarOfTasks"
								SelectionMode="SingleDate"
								CornerRadius="8"
								SelectedDatesChanged="TasksCalendar_SelectedDatesChanged"/>
						</DockPanel>

						<Grid
							RowDefinitions="Auto, *"
							Margin="0 30 0 0">
							<TextBlock
								Grid.Row="0"
								Name="CurrentDateTextBlock"
								Text="Выбранная дата"
								FontSize="20"/>
							<Border
								Grid.Row="1"
								CornerRadius="8"
								Background="#F9F0EB"
								Margin="0 10 0 0">
								<ListBox
									Name="TasksByDateList"
									DoubleTapped="Item_DoubleTapped"
									Background="Transparent"
									CornerRadius="8">
									<ListBox.ItemTemplate>
										<DataTemplate>
											<Border
												Tag="{Binding Id}"
												Background="#F3E6DE"
												CornerRadius="12"
												Padding="10">
												<StackPanel>
													<TextBlock
														Text="{Binding Name}"/>
													<TextBlock
														Text="{Binding Description}"/>
													<TextBlock >
														<Run  Text="Приоритет:"/>
														<Run Text="{Binding PriorityNavigation.Name}"/>
													</TextBlock>
													<TextBlock
														Text="{Binding StatusNavigation.Name}"/>
												</StackPanel>
											</Border>
										</DataTemplate>
									</ListBox.ItemTemplate>
								</ListBox>
							</Border>
						</Grid>

					</DockPanel>

				</Border>

				<Border
					Background="#F9F0EB"
					Padding="30 25"
					CornerRadius="24">
					<DockPanel>
						<Border
							DockPanel.Dock="Top"
							Background="#F3E6DE"
							CornerRadius="24"
							Padding="35 20">
							<Grid
								ColumnDefinitions="* Auto">
								<StackPanel
									Grid.Column="0"
									Spacing="10">
									<TextBlock
										Text="Матрица Эйзенхауэра"
										Foreground="#373E46"
										FontSize="32"
										TextWrapping="Wrap"/>
									<TextBlock
										Text="Матрица Эйзенхауэра помогает определить, какие задачи действительно важны."
										Foreground="#373E46"
										FontSize="13"
										TextWrapping="Wrap"/>
									<TextBlock
										Text="Срочные и важные — выполняй в первую очередь."
										Foreground="#373E46"
										FontSize="13"
										TextWrapping="Wrap"/>
									<TextBlock
										Text="Важные, но не срочные — планируй."
										Foreground="#373E46"
										FontSize="13"
										TextWrapping="Wrap"/>
									<TextBlock
										Text="Срочные, но не важные — делегируй или решай быстро."
										Foreground="#373E46"
										FontSize="13"
										TextWrapping="Wrap"/>
									<TextBlock
										Text="Не срочные и не важные — избегай или откладывай."
										Foreground="#373E46"
										FontSize="13"
										TextWrapping="Wrap"/>
								</StackPanel>
								<Image
									Grid.Column="1"
									Source="/Assets/Images/Layout/greeting.png"
									Width="150"
									Height="150"
									VerticalAlignment="Center"
									HorizontalAlignment="Center"/>
							</Grid>
						</Border>

						<Grid RowDefinitions="*,*" ColumnDefinitions="*,*"
							Margin="0 30 0 0">
							<!-- Секторы матрицы -->
							<!-- Срочно и важно -->
							<Border
								Grid.Row="0"
								Grid.Column="0"
								BorderBrush="#373E46"
								BorderThickness="1"
								CornerRadius="24 0 0 0">
								<StackPanel>
									<TextBlock Text="Срочно и важно" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
									<ListBox
										x:Name="UrgentImportantListBox"
										DoubleTapped="Item_DoubleTapped"
										Background="Transparent">
										<ListBox.ItemTemplate>
											<DataTemplate>
												<Border
													Tag="{Binding Id}"
													Background="#F3E6DE"
													CornerRadius="12"
													Padding="10">
													<StackPanel>
														<TextBlock
															Text="{Binding Name}"/>
														<TextBlock
															Text="{Binding Description}"/>
														<TextBlock >
															<Run  Text="Приоритет:"/>
															<Run Text="{Binding PriorityNavigation.Name}"/>
														</TextBlock>
														<TextBlock
															Text="{Binding StatusNavigation.Name}"/>
													</StackPanel>
												</Border>
											</DataTemplate>
										</ListBox.ItemTemplate>
									</ListBox>
								</StackPanel>
							</Border>
							<!-- Важно, но не срочно -->
							<Border
								Grid.Row="0"
								Grid.Column="1"
								BorderBrush="#373E46"
								BorderThickness="1"
								CornerRadius="0 24 0 0">
								<StackPanel>
									<TextBlock Text="Важно, но не срочно" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
									<ListBox
										x:Name="NotUrgentImportantListBox"
										DoubleTapped="Item_DoubleTapped"
										Background="Transparent">
										<ListBox.ItemTemplate>
											<DataTemplate>
												<Border
													Tag="{Binding Id}"
													Background="#F3E6DE"
													CornerRadius="12"
													Padding="10">
													<StackPanel>
														<TextBlock
															Text="{Binding Name}"/>
														<TextBlock
															Text="{Binding Description}"/>
														<TextBlock >
															<Run  Text="Приоритет:"/>
															<Run Text="{Binding PriorityNavigation.Name}"/>
														</TextBlock>
														<TextBlock
															Text="{Binding StatusNavigation.Name}"/>
													</StackPanel>
												</Border>
											</DataTemplate>
										</ListBox.ItemTemplate>
									</ListBox>
								</StackPanel>
							</Border>
							<!-- Срочно, но не важно -->
							<Border
								Grid.Row="1"
								Grid.Column="0"
								BorderBrush="#373E46"
								BorderThickness="1"
								CornerRadius="0 0 0 24">
								<StackPanel>
									<TextBlock Text="Срочно, но не важно" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
									<ListBox
										x:Name="UrgentNotImportantListBox"
										DoubleTapped="Item_DoubleTapped"
										Background="Transparent">
										<ListBox.ItemTemplate>
											<DataTemplate>
												<Border
													Tag="{Binding Id}"
													Background="#F3E6DE"
													CornerRadius="12"
													Padding="10">
													<StackPanel>
														<TextBlock
															Text="{Binding Name}"/>
														<TextBlock
															Text="{Binding Description}"/>
														<TextBlock >
															<Run  Text="Приоритет:"/>
															<Run Text="{Binding PriorityNavigation.Name}"/>
														</TextBlock>
														<TextBlock
															Text="{Binding StatusNavigation.Name}"/>
													</StackPanel>
												</Border>
											</DataTemplate>
										</ListBox.ItemTemplate>
									</ListBox>
								</StackPanel>
							</Border>
							<!-- Не срочно и не важно -->
							<Border
								Grid.Row="1"
								Grid.Column="1"
								BorderBrush="#373E46"
								BorderThickness="1"
								CornerRadius="0 0 24 0">
								<StackPanel>
									<TextBlock Text="Не срочно и не важно" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
									<ListBox
										x:Name="NotUrgentNotImportantListBox"
										DoubleTapped="Item_DoubleTapped"
										Background="Transparent">
										<ListBox.ItemTemplate>
											<DataTemplate>
												<Border
													Tag="{Binding Id}"
													Background="#F3E6DE"
													CornerRadius="12"
													Padding="10">
													<StackPanel>
														<TextBlock
															Text="{Binding Name}"/>
														<TextBlock
															Text="{Binding Description}"/>
														<TextBlock >
															<Run  Text="Приоритет:"/>
															<Run Text="{Binding PriorityNavigation.Name}"/>
														</TextBlock>
														<TextBlock
															Text="{Binding StatusNavigation.Name}"/>
													</StackPanel>
												</Border>
											</DataTemplate>
										</ListBox.ItemTemplate>
									</ListBox>
								</StackPanel>
							</Border>
						</Grid>
					</DockPanel>
				</Border>
			</DockPanel>
		</Border>
	</DockPanel>
	
</Window>