<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="PersonalAssistant.TasksWindow"
		x:CompileBindings="False"
        Title="Задачи" 
		Width="400" Height="500"
		WindowStartupLocation="CenterScreen">
	<DockPanel Margin="10">

		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="10" HorizontalAlignment="Right" Margin="0,0,0,10">
			<Button Name="GoBackButton" Content="Выйти" Click="GoBackButton_Click"/>
			<Button Name="AddCategoryButton" Content="Добавить категорию"/>
			<Button Name="AddTaskButton" Content="Добавить задачу" Click="AddTaskButton_Click"/>
			<Button Name="ProfileButton" Content="Имя" Click="ProfileButton_Click"/>
		</StackPanel>

		<!-- Панель с фильтром -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
			<TextBlock Text="Фильтр:" VerticalAlignment="Center" Margin="0,0,5,0"/>
			<ComboBox Name="FilterComboBox" Width="150"/>
		</StackPanel>

		<TabControl Name="CategoryTabs">

			<TabItem Header="Все">
				<ListBox 
					Name="AllTasksList"
					DoubleTapped="Item_DoubleTapped">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Border
								Tag="{Binding Id}"
								DoubleTapped="Item_DoubleTapped"
								Background="">
								<StackPanel>
									<TextBlock
										Text="{Binding Name}"/>
									<TextBlock
										Text="{Binding Description}"/>
									<TextBlock >
										<Run  Text="Приоритет:"/>
										<Run Text="{Binding PriorityNavigation.Name}"/>
									</TextBlock>
									<TextBlock
										Text="{Binding StatusNavigation.Name}"/>
								</StackPanel>
							</Border>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>

		</TabControl>

	</DockPanel>
</Window>
